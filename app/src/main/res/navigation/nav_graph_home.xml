<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.foodapp.Home.fragments.MenuFragment"
        android:label="Menu"
        tools:layout="@layout/fragment_menu" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.foodapp.Home.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home"/>
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.example.foodapp.Home.fragments.MoreFragment"
        android:label="More"
        tools:layout="@layout/fragment_more"/>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.foodapp.Home.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile"/>
    <fragment
        android:id="@+id/offersFragment"
        android:name="com.example.foodapp.Home.fragments.OffersFragment"
        android:label="Offers"
        tools:layout="@layout/fragment_offers"/>
    <action
        android:id="@+id/action_global_menuFragment"
        app:destination="@id/menuFragment" />
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment" />
    <action
        android:id="@+id/action_global_moreFragment"
        app:destination="@id/moreFragment" />
    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment" />
    <action
        android:id="@+id/action_global_offersFragment"
        app:destination="@id/offersFragment" />
</navigation>